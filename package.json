{
  "name": "archlens",
  "version": "1.0.0",
  "description": "ArchLens - AI-powered Construction Cost Estimation with Real-time Material Rates",
  "private": true,
  "workspaces": [
    "apps/admin",
    "apps/user",
    "packages/shared"
  ],
  "scripts": {
    "dev": "npm run dev:admin & npm run dev:user",
    "dev:admin": "cd apps/admin && npm start",
    "dev:user": "cd apps/user && npm start",
    "build": "npm run build --workspaces",
    "build:admin": "npm run build --workspace=apps/admin",
    "build:user": "npm run build --workspace=apps/user",
    "lint": "npm run lint --workspaces"
  },
  "dependencies": {
    "@react-native-async-storage/async-storage": "^1.24.0",
    "expo-blur": "~15.0.8",
    "expo-linear-gradient": "~15.0.8",
    "firebase": "^11.0.0",
    "react-dom": "19.1.0",
    "react-native-get-random-values": "^2.0.0",
    "react-native-web": "^0.21.0"
  },
  "devDependencies": {
    "typescript": "~5.9.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
